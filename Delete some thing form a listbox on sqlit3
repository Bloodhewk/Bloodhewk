def Notes():

	conn = sqlite3.connect('DnD towns.db')
	c = conn.cursor()

	Notes=Tk()
	Notes.title("Notes")
	Notes.configure(bg='black')
	Fontnotes=Font(
		family="Jim Nightshade",
		size=13,
		weight='bold')

	def Note_save():

		conn = sqlite3.connect('DnD towns.db')
		c = conn.cursor()

		c.execute("INSERT INTO Town notes VALUES (:Note_Text)",
			{"Note_Text":Note_Text.get(index="END")
			})

		Note_Entry.Delete(0, END)
		conn.commit()
		conn.close()

	NotesL1=Label(Notes,text=mylist.get(ANCHOR),fg='#ff5f00',bg='black',font=Fontnotes)
	NotesL1.grid(row=1,column=1)

	Note_Text=Text(Notes,height=15,width=20,bg="black",fg="#ff5f00",insertbackground='#ff5f00',font=20,bd=-1,wrap=WORD)
	Note_Text.grid(row=2,column=1,pady=15,padx=15)

	Save_Button=Button(Notes,text='Save',pady=15,padx=15,font=20,bg="black",fg='#ff5f00',activebackground='black',bd=-1,command=Note_save)
	Save_Button.grid(row=3,column=1,pady=15)

	conn.commit()
	conn.close()

def Delete():
	x = mylist.curselection()[0]
	mylist.delete(x)


