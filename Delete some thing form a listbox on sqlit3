#Save Function
def Save():
	conn = sqlite3.connect('DnD towns.db')
	c = conn.cursor()

	if var.get() == 1:
		Faction_name="Union"
	elif var2.get() == 1:
		Faction_name="Elves"
	elif var4.get() == 1:
		Faction_name="Player"
	else:
		Faction_name="Unaligned"
	
	c.execute("INSERT INTO DnD VALUES  (:Faction_Entry, :Town_Entry, :Headoftown_Entry )",
			{
			"Faction_Entry":Faction_name,
			"Town_Entry":Town_Entry.get(),
			"Headoftown_Entry":Headoftown_Entry.get()
			})

	Faction_Entry.deselect()
	Faction_Entry2.deselect()
	#Faction_Entry3.deselect()
	Faction_Entry4.deselect()
	Town_Entry.delete(0,END)
	Headoftown_Entry.delete(0,END)
	mylist.delete(0, END)

	conn.commit()
	conn.close()

	conn = sqlite3.connect('Dnd towns.db')
	c = conn.cursor()

	c.execute("SELECT *,oid FROM DnD")
	rows=c.fetchall()
	doggy=1
	for row in rows:
		print_row = str(row[0]) + ",  " + str(row[1]) + ",  " + str(row[2]) +"." + "\n"
		mylist.insert(doggy, print_row)
		doggy=doggy+1
		
	conn.commit()
	conn.close()
#+ ",  " + str(row[3])

#Reset Function
def Reset():
	conn = sqlite3.connect('Dnd towns.db')
	c = conn.cursor()
	mylist.delete(0, END)
	c.execute("SELECT *,oid FROM DnD")
	rows=c.fetchall()
	doggy=1
	for row in rows:
		print_row = str(row[0]) + ",  " + str(row[1]) + ",  " + str(row[2]) + "." + "\n"
		mylist.insert(doggy, print_row)
		doggy=doggy+1

	Faction_Entry.deselect()
	Faction_Entry2.deselect()
	#Faction_Entry3.deselect()
	Faction_Entry4.deselect()
	Town_Entry.delete(0,END)
	Headoftown_Entry.delete(0,END)
	
	conn.commit()
	conn.close()


